# Database Configuration
DATABASE_URL="postgresql://username@localhost:5432/database_name?schema=public"
DIRECT_URL="postgresql://username@localhost:5432/database_name?schema=public"

# Clerk Authentication (User Management)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your_clerk_publishable_key
CLERK_SECRET_KEY=sk_test_your_clerk_secret_key
CLERK_ENCRYPTION_KEY=your_clerk_encryption_key

# Clerk Redirect URLs
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/

# Payment Gateway Configuration (Razorpay)
RAZORPAY_KEY_ID="your_razorpay_key_id"
RAZORPAY_KEY_SECRET="your_razorpay_key_secret"
NEXT_PUBLIC_RAZORPAY_KEY_ID="your_razorpay_key_id"

# Application Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_CURRENCY_SYMBOL=â‚¹

# Admin & Store Owner Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Email Service Configuration (Gmail OAuth2)
GMAIL_USER=your-gmail@gmail.com
GMAIL_CLIENT_ID=your_gmail_client_id
GMAIL_CLIENT_SECRET=your_gmail_client_secret
GMAIL_REFRESH_TOKEN=your_gmail_refresh_token
